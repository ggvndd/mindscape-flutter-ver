rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Moods subcollection - users can read/write their own moods
      match /moods/{moodId} {
        allow read, write: if isOwner(userId);
      }
      
      // Conversations subcollection - users can read/write their own conversations
      match /conversations/{conversationId} {
        allow read, write: if isOwner(userId);
      }
      
      // Chat sessions subcollection - users can read/write their own chat sessions
      match /chatSessions/{chatId} {
        allow read, write: if isOwner(userId);
        
        // Messages subcollection - users can read/write messages in their own chats
        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }
    }
    
    // Legacy root-level moods collection (if any old data exists)
    // Remove this if you've migrated all data to users/{userId}/moods
    match /moods/{moodId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Legacy mood_entries collection (from auth_service)
    match /mood_entries/{entryId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
  }
}
